{% extends('layout.admin') %}

{% block content %}
    <div class="container-fluid">
        <p class="display-4">Просмотр вопросов</p>
        <div class="row">
            <div class="col-md-12">
                <form action="" method="post" accept-charset="utf-8">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                    <div class="form-group">
                        <label for="inputCategory">Выберите категорию</label>
                        <select name="inputCategory" id="inputCategory" class="form-control">

                            {% for category in categories %}
                                <option value="{{ category.id }}" {% if category.id == selectedCategory %} selected {% endif %}>{{ category.name }}</option>
                            {% endfor %}

                        </select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Показать</button>
                    </div>

                    <table class="table table-hover table-bordered table-condensed">
                        <thead class="thead-light">
                        <tr>
                            <th>№</th>
                            <th>Вопрос</th>
                            <th>Ответ</th>
                            <th>Автор</th>
                            <th>Опубликован</th>
                            <th></th>
                            <th>Перенос вопроса в другую категорию</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in result %}
                            <tr>
                                <td>
                                    {{ item.id }}
                                </td>
                                <td>
                                    {{ item.question }}
                                </td>
                                <td>
                                    {{ item.answer.answer }}
                                </td>
                                <td>
                                    {{ item.author }}
                                </td>
                                <td class="text-center">
                                    {% if item.published == 1 %}
                                        Да
                                    {% else %}
                                        Нет
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ route('edit') ~ '/' ~ item.id }}">Редактировать</a>
                                </td>
                                <td>
                                    <a href="{{ route('changeTheme') ~ '/' ~ item.id }}">Перенести</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </form>
            </div>
        </div>
    </div>
{% endblock content %}

{% block init_scripts %}
{% endblock init_scripts %}